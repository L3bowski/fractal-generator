<html>
    <head>
        <title>Fractal generator</title>
        <meta charset="utf-8">
        <meta name="description" content="Fractal picture generator" />
        <meta name="author" content="Carles Capellas" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta name="theme-color" content="#b7e1f3" />
        <link rel="stylesheet" href="/plugins/bootstrap-4.0.0/bootstrap.min.css" />
        <link rel="stylesheet" href="/plugins/spinkit/spinkit.css" />
        <link rel="stylesheet" href="/plugins/basic-modal-3.3.8/normalize-3.0.3.min.css" />
        <link rel="stylesheet" href="/plugins/basic-modal-3.3.8/basic-modal.min.css" />
        <link rel="stylesheet" href="<%= asset('css/main.css') %>" />
        <link rel="icon" type="image/png" href="<%= asset('favicon.png') %>">
    </head>

    <body>
        <button class="btn controls toggler" type="button" data-toggle="collapse" data-target="#fractal-controls">
            &#9998;
        </button>
        <button class="btn controls color-picker" type="button" id="color-picker">
            &#10002;
        </button>
        <button class="btn controls reload" type="button" id="reloader">
            &#8635;
        </button>

        <div id="loader" class="max-square full-screen" style="display: none;">
            <div class="sk-cube-grid">
                <div class="sk-cube sk-cube1 colorizable"></div>
                <div class="sk-cube sk-cube2 colorizable"></div>
                <div class="sk-cube sk-cube3 colorizable"></div>
                <div class="sk-cube sk-cube4 colorizable"></div>
                <div class="sk-cube sk-cube5 colorizable"></div>
                <div class="sk-cube sk-cube6 colorizable"></div>
                <div class="sk-cube sk-cube7 colorizable"></div>
                <div class="sk-cube sk-cube8 colorizable"></div>
                <div class="sk-cube sk-cube9 colorizable"></div>
            </div>
        </div>

        <div id="fractal-controls" class="collapse top-menu show">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label for="rows-number">Rows number (<span id="rows-label">3</span>)</label>
                                    <input type="range" id="rows-number" class="form-control" min="1" max="10" value="3">
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label for="columns-number">Columns number (<span id="columns-label">3</span>)</label>
                                    <input type="range" id="columns-number" class="form-control" min="1" max="10" value="3">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div id="pattern" class="pad-10 text-center"></div>            
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label for="zoom-out">Zoom out (<span id="zoom-label">3</span>)</label>
                                    <input type="range" id="zoom-out" class="form-control" min="0" max="7" value="3">
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <button type="button" id="fractal-drawer" class="btn btn-primary media-margin-top">Draw fractal</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="fractal-wrapper" class="aligner">
            <canvas id="fractal-picture"></canvas>
        </div>

        <script src="/plugins/jquery-2.1.1/jquery-2.1.1.min.js"></script>
        <script src="/plugins/tether-1.3.3/tether.min.js"></script>
        <script src="/plugins/bootstrap-4.0.0/bootstrap.min.js"></script>
        <script src="/plugins/basic-modal-3.3.8/basic-modal.min.js"></script>
        <script src="/plugins/jscolor/jscolor.js"></script>
        <script src="<%= asset('js/models/fractal.js') %>"></script>
        <script src="<%= asset('js/services/fractal-service.js') %>"></script>
        <script src="<%= asset('js/services/canvas-service.js') %>"></script>
        <script src="<%= asset('js/presentation/generics.js') %>"></script>
        <script src="<%= asset('js/presentation/color-picker-custom.js') %>"></script>
        <script src="<%= asset('js/presentation/binders.js') %>"></script>
    </body>
</html>